{% extends 'base.html.twig' %}

{% block body %}

    <h3>Administrative Level {{ lvl }} Location Data</h3>

    {% component api_grid with {
        caller: _self,
        class: locationClass,
        filter: {
            lvl: lvl
        },
        columns: [
            {name: 'code', title: 'Unique'},
            'countryCode',
            lvl > 1 ? 'stateCode' : null,
            'name',
            'childCount',
            'lvl',
        ]
    } %}

    {% endcomponent %}

{% endblock %}
